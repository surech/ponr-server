<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.2.xsd">

    <changeSet id="1" author="surech">
        <comment>Neue Tabelle für den Anbieter</comment>
        <sql>
            CREATE TABLE ponr.provider
            (
            ID BIGINT PRIMARY KEY NOT NULL AUTO_INCREMENT,
            PUBLIC_ID VARCHAR(50) NOT NULL,
            NAME VARCHAR(255) NOT NULL,
            LOCATION GEOMETRY NOT NULL
            ) ENGINE=MyISAM;
            CREATE SPATIAL INDEX LOCATION ON provider ( LOCATION );
        </sql>
    </changeSet>

    <changeSet id="2" author="surech">
        <comment>Den öffentlichen Schlüssel mit einem eindeutigen Index versehen</comment>
        <addUniqueConstraint tableName="provider" columnNames="PUBLIC_ID"/>
    </changeSet>

    <changeSet id="3" author="surech">
        <addColumn tableName="provider">
            <column name="street" type="varchar(255)"/>
            <column name="zip" type="varchar(255)"/>
            <column name="city" type="varchar(255)"/>
            <column name="description" type="varchar(512)"/>
            <column name="url" type="varchar(255)"/>
            <column name="poinzId" type="varchar(255)"/>
        </addColumn>
    </changeSet>

    <changeSet id="4" author="surech">
        <addColumn tableName="provider">
            <column name="createdAt" type="DATETIME"/>
        </addColumn>
    </changeSet>

    <changeSet id="5" author="surech">
        <createTable tableName="pointcode">
            <column name="ID" type="BIGINT" autoIncrement="true" remarks="Technischer Primärschlüssel">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="PUBLIC_ID" type="varchar(50)" remarks="Öffentlicher Schlüssel">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="PROVIDER_FK" type="BIGINT" remarks="Fremdschlüssel auf den Anbieter">
                <constraints nullable="false" unique="false"/>
            </column>
            <column name="CONTENT" type="varchar(500)" remarks="Inhalt des Codes">
                <constraints nullable="false" unique="false"/>
            </column>
            <column name="createdAt" type="DATETIME">
                <constraints nullable="false" unique="false"/>
            </column>
        </createTable>

        <sql>ALTER TABLE ponr.pointcode ENGINE=MyISAM</sql>

        <addForeignKeyConstraint baseTableName="pointcode" baseColumnNames="PROVIDER_FK"
                                 constraintName="POINTCODE_PROVIDER_FK"
                                 referencedTableName="provider"
                                 referencedColumnNames="ID" />
    </changeSet>

    <changeSet id="6" author="surech">
        <comment>Aktuell brauchen wir die Public-ID nicht mehr, also weg damit.</comment>
        <dropColumn tableName="provider" columnName="public_id"/>
        <dropColumn tableName="pointcode" columnName="public_id"/>
    </changeSet>

    <changeSet id="7" author="surech">
        <createTable tableName="user" remarks="Enthält die eigentlichen Benutzer">
            <column name="ID" type="BIGINT" autoIncrement="true" remarks="Technischer Primärschlüssel">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="createdAt" type="DATETIME">
                <constraints nullable="false" unique="false"/>
            </column>
        </createTable>

        <sql>ALTER TABLE ponr.user ENGINE=MyISAM</sql>
    </changeSet>

    <changeSet id="8" author="surech">
        <createTable tableName="userclientconnection">
            <column name="ID" type="BIGINT" autoIncrement="true" remarks="Technischer Primärschlüssel">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="USER_FK" type="BIGINT" remarks="Fremdschlüssel auf den Benutzer">
                <constraints nullable="false" unique="false"/>
            </column>
            <column name="CLIENT_ID" type="varchar(500)" remarks="Client-ID des OAuth-Providers">
                <constraints nullable="false" unique="false"/>
            </column>
            <column name="PRINCIPAL_ID" type="varchar(500)" remarks="Identifiert des Benutzers beim OAuth-Provider">
                <constraints nullable="false" unique="false"/>
            </column>
            <column name="createdAt" type="DATETIME">
                <constraints nullable="false" unique="false"/>
            </column>
        </createTable>

        <sql>ALTER TABLE ponr.userclientconnection ENGINE=MyISAM</sql>

        <addForeignKeyConstraint baseTableName="userclientconnection" baseColumnNames="USER_FK"
                                 constraintName="USER_CONNECTION_FK"
                                 referencedTableName="user"
                                 referencedColumnNames="ID" />
    </changeSet>

    <changeSet id="9" author="surech">
        <createTable tableName="favorites">
            <column name="ID" type="BIGINT" autoIncrement="true" remarks="Technischer Primärschlüssel">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="USER_FK" type="BIGINT" remarks="Fremdschlüssel auf den Benutzer">
                <constraints nullable="false" unique="false"/>
            </column>
            <column name="POINTCODE_FK" type="varchar(500)" remarks="Fremdschlüssel auf den favorisierten Code">
                <constraints nullable="false" unique="false"/>
            </column>
            <column name="createdAt" type="DATETIME">
                <constraints nullable="false" unique="false"/>
            </column>
        </createTable>

        <sql>ALTER TABLE ponr.favorites ENGINE=MyISAM</sql>

        <addForeignKeyConstraint baseTableName="favorites" baseColumnNames="USER_FK"
                                 constraintName="FAVORITE_USER_FK"
                                 referencedTableName="user"
                                 referencedColumnNames="ID" />

        <addForeignKeyConstraint baseTableName="favorites" baseColumnNames="POINTCODE_FK"
                                 constraintName="FAVORITE_CODE_FK"
                                 referencedTableName="pointcode"
                                 referencedColumnNames="ID" />
    </changeSet>

</databaseChangeLog>